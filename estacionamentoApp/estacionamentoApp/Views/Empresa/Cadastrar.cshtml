@using estacionamentoApp.Models
@model EmpresaModel

@{
    ViewData["title"] = "Cadastrar empresa";
}
<div class="container p-5 rounded-5">

    <div class="mb-5 text-center">
        <h2>Cadastro de empresa</h2>
    </div>

    <form method="post" asp-controller="Empresa" asp-action="Cadastrar">
        <div class="mb-3">
            <label for="Recebedor" class="form-label text-black">Nome completo da empresa:</label>
            <input type="text" class="form-control" id="Nome" asp-for="Nome" placeholder="Informe o nome completo da empresa">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
       
        <div class="mb-3">
            <label for="Cnpj" class="form-label text-black">CNPJ:</label>
            <input type="text" class="form-control" id="Cnpj" asp-for="Cnpj" placeholder="Informe o CNPJ da empresa">
            <span class="text-danger" asp-validation-for="Cnpj"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50"><i class="bi bi-save mx-2"></i>Salvar</button>
            <a class="btn btn-primary w-50" asp-controller="Empresa" asp-action="Index"><i class="bi bi-arrow-left-square mx-2"></i>Voltar</a>
        </div>
    </form>

</div>