@using estacionamentoApp.Models
@model EmpresaModel

@{
    ViewData["title"] = "Editar empresa";
}
<div class="container p-5 rounded-5">
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }
    <div class="mb-5 text-center">
        <h2>Edição de cliente</h2>
    </div>

    <form method="post" asp-controller="Empresa" asp-action="Editar">

        <input type="hidden" asp-for=Id />

        <div class="mb-3">
            <label for="Recebedor" class="form-label text-black">Nome completo:</label>
            <input type="text" class="form-control" id="Nome" asp-for="Nome" placeholder="Informe o nome da empresa">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
       
        <div class="mb-3">
            <label for="Cnpj" class="form-label text-black">CNPJ:</label>
            <input type="text" class="form-control" id="Cnpj" asp-for="Cnpj" placeholder="Informe o CNPJ da empresa">
            <span class="text-danger" asp-validation-for="Cnpj"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Editar</button>
            <a asp-controller="Cliente" asp-action="Index" class="btn btn-primary w-50"><i class="bi bi-arrow-left-square mx-2"></i>Voltar</a>
        </div>
    </form>

</div>