@using estacionamentoApp.Models
@model EstacionamentoModel

@{
    ViewData["title"] = "Editar estacionamento";
}
<div class="container p-5 rounded-5">
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }
    <div class="mb-5 text-center">
        <h2>Edição de estacionamento</h2>
    </div>

    <form method="post" asp-controller="Estacionamento" asp-action="Editar">

        <input type="hidden" asp-for=Id />

        <div class="mb-3">
            <label for="Nome" class="form-label text-black">Nome:</label>
            <input type="text" class="form-control" id="Nome" asp-for="Nome" placeholder="Informe o nome do estacionamento">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="mb-3">
            <label for="FilialId" class="form-label text-black">Filial:</label>
            <select class="form-control" id="FilialId" asp-for="FilialId" asp-items="@(new SelectList(ViewBag.Filiais, "Id", "Nome"))">
                <option value="">Selecione uma filial</option>
            </select>
            <span class="text-danger" asp-validation-for="FilialId"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Editar</button>
            <a asp-controller="Estacionamento" asp-action="Index" class="btn btn-primary w-50"><i class="bi bi-arrow-left-square mx-2"></i>Voltar</a>
        </div>
    </form>

</div>
