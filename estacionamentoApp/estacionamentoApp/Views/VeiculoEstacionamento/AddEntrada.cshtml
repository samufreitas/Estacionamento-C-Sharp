    @using estacionamentoApp.Models
    @model VeiculoEstacionamentoModel

    <!-- Modal -->
    <div class="modal fade" id="AddVeiculoEstacionarModal" tabindex="-1" aria-labelledby="AddVeiculoEstacionarModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="AddVeiculoEstacionarModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-controller="VeiculoEstacionamento" asp-action="AddEntrada">

                        <input type="hidden" name="EstacionamentoId" asp-for="EstacionamentoId" value="@ViewBag.EstacionamentoId" />

                        <div class="mb-3">
                            <label for="VeiculoId" class="form-label text-black">Empresa:</label>
                            <select class="form-control" id="VeiculoId" asp-for="VeiculoId" asp-items="@(new SelectList(ViewBag.Veiculos, "Id", "Modelo"))">
                                <option value="">Selecione uma empresa</option>
                            </select>
                            <span class="text-danger" asp-validation-for="VeiculoId"></span>
                        </div>

                        <div class="d-flex gap-5 mt-5">
                            <button type="submit" class="btn btn-success w-50"><i class="bi bi-save mx-2"></i>Salvar</button>
                            <a class="btn btn-primary w-50" asp-controller="VeiculoEstacionamento" asp-action="Index"><i class="bi bi-arrow-left-square mx-2"></i>Voltar</a>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>